      <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark text-center">
          <tr>
            <th>ID de Orden</th>
            <th>Monto</th>
            <th>Estado</th>
          </tr>
        </thead>
        <tbody class="text-center">
          <tr>
            <td>1001</td>
            <td><%= number_to_currency(59.99) %></td>
            <td><span class="badge bg-success rounded-pill px-3 py-2">Aprobado</span></td>
          </tr>
          <tr>
            <td>1002</td>
            <td><%= number_to_currency(149.00) %></td>
            <td><span class="badge bg-danger rounded-pill px-3 py-2">Rechazado</span></td>
          </tr>
          <tr>
            <td>1003</td>
            <td><%= number_to_currency(20.50) %></td>
            <td><span class="badge bg-success rounded-pill px-3 py-2">Aprobado</span></td>
          </tr>
          <tr>
            <td>1004</td>
            <td><%= number_to_currency(89.90) %></td>
            <td><span class="badge bg-warning text-dark rounded-pill px-3 py-2">Pendiente</span></td>
          </tr>
          <tr>
            <td>1005</td>
            <td><%= number_to_currency(12.00) %></td>
            <td><span class="badge bg-success rounded-pill px-3 py-2">Aprobado</span></td>
