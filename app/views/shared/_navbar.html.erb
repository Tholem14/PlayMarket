<div class="navbar navbar-expand-sm navbar-dark bg-dark navbar-lewagon">
  <div class="container-fluid d-flex align-items-center">


    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "", alt: "Logo" %> Logo PlayMarket
    <% end %>


    <div class="d-flex ms-auto gap-4">
      <%= link_to "Home", "#", class: "nav-link text-white hover-effect" %>
      <%= link_to "About", "#", class: "nav-link text-white hover-effect" %>
      <%= link_to "Market", "#", class: "nav-link text-white hover-effect" %>
      <%= link_to "Add Product", "#", class: "nav-link text-white me-5 hover-effect" %>
    </div>


    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login - Sign up", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>
