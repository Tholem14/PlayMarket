<%= link_to '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
      <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
      </svg> Add new product'.html_safe, new_product_path, class:'btn btn-success w-40 rounded-pill py-2 fs-5 mt-4' %>

<div id='cart' class="container"  data-bs-toggle="modal" data-bs-target="#myModal">
<button class="btn btn-success rounded-4 py-2"><i class="fa-solid fa-cart-plus fa-xl" style="color:rgb(0, 0, 0);"></i>(0)</button>
<div class="modal" id="myModal">
  <div class="modal-dialog modal-lg position-fixed top-0 end-0 h-100" style="width: 45vw; max-width: 500px;">
    <div class="modal-content">


      <div class="modal-header">
        <h4 class="modal-title">Modal Heading</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        Modal body..
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>
</div>

<section id="shop" class="container mt-5 rounded-4">
   <div class="row">
<% @products.each do |product|%>
    <div class="col-md-3 mb-4" id="shop-items">
      <div class="card shadow rounded-4 h-100 d-flex flex-column">
        <button id='details' class="btn btn-success text-white position-absolute top-0 end-0 m-2" data-bs-toggle="modal" data-bs-target="#productModal-<%= product.id %>">
            View Details
          </button>
        <img src="<%=product.picture%>" class="card-img-top rounded-top" class="card-img-top" alt="<%=product.name%>">
        <div class="card-body text-center flex-grow-1">
         <div class="mb-4">
          <h5 class="card-title text-white"  ><%=product.name%></h5>
          <span class="price text-success fs-5 font-weight-bold"> <strong>$ <%= product.price%></strong></span>
        </div>
          <button class="btn btn-success btn-block add position-absolute bottom-0 start-0 w-100 rounded-4 py- mt-3"><i class="fa-solid fa-cart-plus fa-xl" style="color:rgb(0, 0, 0);"></i>Add to cart</button>
        </div>
      </div>
    </div>
    <%= render 'products/modal', product: product %>
<%end%>
</div>
</section>
