<div class="modal fade" id="productModal-<%= product.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="productModalLabel<%= product.id %>"><%=product.name%></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <img src="<%=product.picture%>" class="img-fluid rounded" alt="<%=product.name%>">
         <h4 class="mt-3"><%= product.name %></h4>
              <p class="text-muted"><%= product.category %></p>
              <p><%= product.description %></p>
              <h3 class="text-success">$<%= product.price %></h3>
      </div>
      <div class="modal-footer">
        <button class="btn btn-success btn-block bottom-0 start-0 w-100 rounded-4 py- mt-3"><i class="fa-solid fa-cart-plus fa-xl" style="color:rgb(0, 0, 0);"></i>Add to cart</button>
      </div>
    </div>
  </div>
</div>
