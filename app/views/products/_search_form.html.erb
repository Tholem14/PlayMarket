      <div class="input-group">
        <%= form.text_field :query, placeholder: "Buscar skins o cuentas...", class: "form-control", id: "search-bar" %>

        <%= form.select :category, options_for_select(Product.distinct.pluck(:category), params[:category]), { include_blank: "Todas las categorÃ­as" }, class: "form-select" %>

        <%= form.submit "Buscar", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  <ul id="suggestions" class="list-group mt-2"></ul>
</div>
