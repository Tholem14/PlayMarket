<div class="col-md-4 mb-4">
  <div class="card h-100">
    <div class="card-img-top bg-light" style="height: 200px; background-image: url('<%= product.picture || product.image %>'); background-size: cover; background-position: center;"></div>
    <div class="card-body text-center">
      <h5 class="card-title"><%= product.name %></h5>
      <p class="text-muted"><%= product.category %></p>
      <p><%= number_to_currency(product.price, unit: "$") %></p>
      <button class="btn btn-success w-100 mt-2" data-bs-toggle="modal" data-bs-target="#productModal-<%= product.id %>">
        <i class="fa-solid fa-cart-plus"></i> Comprar
      </button>
    </div>
  </div>
</div>
