
<div class="container mt-5 p-4 bg-white shadow-4 rounded-4">
  <h2 class="mb-5 fw-bold">Log in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <strong class="fs-5"> <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'form-control form-control-lg rounded-pill' } %></strong>
    <strong class="fs-5"> <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: 'form-control form-control-lg rounded-pill' } %> </strong>
     <strong class="fs-5"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> </strong>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-success w-100 rounded-pill py-2 fs-5 mt-4 mb-4 mb-4' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
