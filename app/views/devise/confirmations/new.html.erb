<div class="container mt-5 p-4 bg-white shadow-4 rounded-4">
<h2 class="mb-5 fw-bold">Resend confirmation instructions</h2>
<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <div class="form-inputs">
   <strong class="fs-5"> <%= f.input :email,
                required: true,
                autofocus: true,
                value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                input_html: { autocomplete: "email", class: 'form-control form-control-lg rounded-pill' } %></strong>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Resend confirmation instructions", class: 'btn btn-success w-100 rounded-pill py-2 fs-5 mt-4 mb-4' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
